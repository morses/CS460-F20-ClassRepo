@model string
@{
    ViewData["Title"] = "Capitalize";
}

<div class="row">
    <div class="col">
        <h1>Capitalize a String (Version 1)</h1>

        <form asp-controller="Home" asp-action="Capitalize" method="get">
            <div class="form-group">
                <label for="stringInput">Enter a string: </label>
                <input type="text" class="form-control" id="stringInput" name="input">
                <small class="form-text text-muted">We promise nothing bad will happen.</small>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


@if(!String.IsNullOrEmpty(Model))
{
<div class="row">
    <div class="col">
        <div class="border border-success rounded m-5 p-3 bg-light">
            <span class="font-weight-bold">@Html.Raw(Model)</span>
            @*<span class="font-weight-bold">@Model</span>*@
        </div>
    </div>
</div>
}